{
  "mcpServers": {
    "git-polite-nightly": {
      "command": "uv",
      "args": [
        "run",
        "git_polite.py",
        "mcp"
      ]
    },
    "git-polite-nightly-structured": {
      "command": "uv",
      "args": [
        "run",
        "git_polite.py",
        "mcp",
        "--structured-output"
      ]
    }
  }
}
